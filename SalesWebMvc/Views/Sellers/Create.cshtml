@* Nedessario declarar o arroba model *@
@model SalesWebMvc.Models.Seller

@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Seller</h4>
<hr />
@*class row garante que a div ocupa a largura da tela  *@
<div class="row">
    @* Garantir que essa div ocupe 1/3 da pagina, 
        o bootstrap divide em 12 partes por padrão*@
    <div class="col-md-4">
        @* Ação create POST, essa não é a create GET *@
        <form asp-action="Create">
            <div class="form-group">
                @* Label que vai aparecer na caixinha para digitar *@
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                @* Label que vai aparecer na caixinha para digitar *@
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                @* Label que vai aparecer na caixinha para digitar *@
                <label asp-for="Birthdate" class="control-label"></label>
                <input asp-for="Birthdate" class="form-control" />
            </div>
            <div class="form-group">
                @* Label que vai aparecer na caixinha para digitar *@
                <label asp-for="BaseSalary" class="control-label"></label>
                <input asp-for="BaseSalary" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

